@model THE_APP.Models.PostModel

@{
    ViewBag.Title = "NewPost";
}

<h2>NewPost</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Type)
        @Html.TextBoxFor(m => m.Type, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.Type)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Budget)
        @Html.TextBoxFor(m => m.Budget, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(x => x.Budget)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

