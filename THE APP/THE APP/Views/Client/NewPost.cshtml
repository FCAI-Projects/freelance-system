@model THE_APP.Models.PostModel
@{
    ViewBag.Title = "NewPost";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<h2>NewPost</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Type)
        @Html.DropDownListFor(m => m.Type, new List<SelectListItem>
        {
            new SelectListItem{Text="fixed", Value="fixed"},
            new SelectListItem{Text="hourly", Value="hourly"}
        }, "Please Select", new { @class= "form-select" })
        @Html.ValidationMessageFor(x => x.Type, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Budget)
        @Html.TextBoxFor(m => m.Budget, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(x => x.Budget, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

