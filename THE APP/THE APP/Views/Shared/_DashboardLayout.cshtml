<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Freelance System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="text-center mb-5 mt-3">
        <h1>@Html.ActionLink("Freelance System", "Index", "Home", null, new { area = "", @class = "text-dark " })</h1>
    </header>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <ul class="navbar-nav flex-row">
                <li class="nav-item me-2">@Html.ActionLink("Profile", "Index", "Admin", null, new { @class="nav-link" })</li>
                <li class="nav-item me-2">@Html.ActionLink("Users Page", "Index", "Admin", null, new { @class = "nav-link" })</li>
                <li class="nav-item me-2">@Html.ActionLink("Posts Page", "Index", "Admin", null, new { @class = "nav-link" })</li>
                <li class="nav-item me-2">@Html.ActionLink("Posts Requests", "Index", "Admin", null, new { @class = "nav-link" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Freelance System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
