<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Freelance System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="text-center mb-3">
        <h1>@Html.ActionLink("Freelance System", "Index", "Home", null, new { area = "", @class = "text-dark " })</h1>
    </header>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <form class="d-flex align-items-center">
                <label class="form-label mb-0 me-2" for="filter">Filter:</label>
                <input class="form-control" id="filter" type="text" aria-label="Filter">
            </form>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Freelance System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
