<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Freelance System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="text-center mb-4 mt-3">
        <h1>@Html.ActionLink("Freelance System", "Index", "Home", null, new { area = "", @class = "text-dark " })</h1>
    </header>
    <div>
        <div class="container d-flex flex-row-reverse">
            @{Html.RenderAction("LoginPartial", "Home");}
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <nav class="nav flex-column">
                    @Html.ActionLink("Profile", "Index", "Client", null, new { @class = "nav-link bg-light my-1" })
                    @Html.ActionLink("Create New Post", "NewPost", "Client", null, new { @class = "nav-link bg-light my-1" })
                    @Html.ActionLink("My Posts", "AllPost", "Client", null, new { @class = "nav-link bg-light my-1" })
                    @Html.ActionLink("Received proposals", "Proposals", "Client", null, new { @class = "nav-link bg-light my-1" })
                </nav>
            </div>
            <div class="col-md-9 col-sm-12">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Freelance System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
